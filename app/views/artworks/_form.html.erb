<div data-controller="tom-select">
  <%= simple_form_for(@artwork) do |f| %>
    <%= f.input :name %>
    <%= f.input :genre %>

    <input type="hidden" value="" name="tags" id="tag-box">

    <%= f.input :tags, as: :select, collection: Tag.all.each { |tag| tag.name }, input_html:{ data: {tom_select_target: "selector", action: "input->tom-select#change"}} %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
</div>

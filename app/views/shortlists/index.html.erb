

<div class="shortlist-wrap">
 <div class="shortlist-name-column">
  <div class="short-sideways-text">
    Shortlists
  </div>
 </div>

  <div class="shortlists-column">
    <div class="container w-75 mx-auto">
    <%= render partial: "shared/create_shortlist_modal", locals: { shortlist: @shortlist } %>
    <div class="shortlist-container">
      <% @shortlists.each_with_index do |shortlist, index| %>

        <div class="d-flex w-100 justify-content-between align-items-center border-top p-4 <%= index < @shortlists.count - 1 ? "" : "border-bottom" %>">
          <h3 class="mb-0">
            <%= link_to shortlist.name, shortlist_path(shortlist), class: "text-decoration-none"%>
            <small class="fs-6">( <%= shortlist.artists.size %> artists )</small>
          </h3>


          <div class="delete">
            <%= link_to shortlist_path(shortlist), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-danger" do %>
              <%= icon("fa-regular","trash-can") %>
              <span>delete</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

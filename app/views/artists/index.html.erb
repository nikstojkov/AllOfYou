<div class="page-wrapper">
<div class="container mt-3 artist-card__container">
<%= form_with url: artists_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an artist"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h1>All Artists</h1>
  <% @artists.each do |artist| %>
    <%= link_to artist_path(artist), class: "text-decoration-none artist-card__link" do %>
      <%= render partial: "shared/artist_card", locals: {artist: artist} %>
    <% end %>
  <% end %>
</div>

    <%= link_to artworks_path, class: "text-decoration-none" do %>
    <div class="tab-button tab-button--artworks">
      <div class="sideways-text">Artworks</div>
    </div>
  <% end %>

  <%= link_to opportunities_path, class: "text-decoration-none" do %>
    <div class="tab-button tab-button--opportunities">
      <div class="sideways-text">Opportunities</div>
    </div>
  <% end %>
</div>

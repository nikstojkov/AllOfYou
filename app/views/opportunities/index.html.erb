<h1>All Opportunities</h1>

<div class="container">
  <% @opportunities.each do |opportunity| %>
    <ul>
      <li><%= link_to opportunity.title, opportunity_path(opportunity) %></li>
      <li><%= opportunity.location %></li>
      <li><%= opportunity.description %></li>
      <li><%= opportunity.status %></li>
      <% if current_user == opportunity.user %>
        <%= link_to "Delete",
            opportunity_path(opportunity),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <%# must add validation that its user, not artist for delete method %>
      <% end %>
    </ul>
  <% end %>
</div>
